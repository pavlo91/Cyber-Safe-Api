doctype html
html(lang="en")
  head
    block head
      title #{appName}
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      html {
        background: rgb(250,250,250);
      }
      body {
        padding: 1rem;
      }
      main {
        margin: 0 auto;
        padding: 1.5rem;
        max-width: 768px;
        background: white;
        border: 1px solid rgb(240,240,240);
      }
      footer {
        opacity: 0.25;
        margin-top: 1rem;
      }
  body
    main
      block body
      footer &copy; #{new Date().getFullYear()} #{appName} | All Rights Reserved
