{
  "name": "cybersafely-api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "git@github.com:wonderkiln/cybersafely-api.git",
  "author": "Adrian Mateoaea <adrianmteo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --transpile-only --exit-child --quiet --cls -r dotenv/config src/index.ts",
    "dev:staff": "ts-node --transpile-only src/staff.ts",
    "dev:initial": "rm -rf prisma/migrations && yarn reset && yarn migrate initial",
    "codegen": "graphql-codegen --config codegen.yml",
    "reset": "prisma migrate reset --force",
    "migrate": "prisma migrate dev --name",
    "typecheck": "tsc --noEmit",
    "postinstall": "prisma generate",
    "build": "tsc",
    "start": "prisma migrate deploy && node dist/index.js",
    "staff": "node dist/staff.js"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.16.5",
    "@graphql-codegen/typescript": "^2.8.8",
    "@graphql-codegen/typescript-resolvers": "^2.7.13",
    "@types/bcrypt": "^5.0.0",
    "@types/glob": "^8.0.1",
    "@types/node": "^18.11.18",
    "@types/node-cron": "^3.0.7",
    "@types/pug": "^2.0.6",
    "dotenv": "^16.0.3",
    "prisma": "^4.9.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@apollo/server": "^4.3.2",
    "@as-integrations/fastify": "^1.3.0",
    "@fastify/cors": "^8.2.0",
    "@ngneat/falso": "^6.4.0",
    "@prisma/client": "^4.9.0",
    "bcrypt": "^5.1.0",
    "fastify": "^4.12.0",
    "glob": "^8.1.0",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.20.1",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^3.0.2",
    "postmark": "^3.0.15",
    "pug": "^3.0.2",
    "zod": "^3.20.2"
  }
}
