generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [citext]
}

model User {
  id              String         @id @default(cuid())
  uuid            String         @unique @default(uuid())
  createdAt       DateTime       @default(now())
  email           String         @unique @db.Citext
  password        String?
  activationToken String?        @unique
  name            String
  isStaff         Boolean        @default(false)
  isConfirmed     Boolean        @default(false)
  memberships     Membership[]
  parents         Relationship[] @relation(name: "Child")
  children        Relationship[] @relation(name: "Parent")

  @@index(isStaff)
  @@index(isConfirmed)
}

model Address {
  id           String        @id @default(cuid())
  street       String
  city         String
  state        String
  zip          String
  organization Organization?
}

model Organization {
  id          String       @id @default(cuid())
  createdAt   DateTime     @default(now())
  name        String
  addressId   String       @unique
  address     Address      @relation(fields: [addressId], references: [id])
  memberships Membership[]
}

model Membership {
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  isAdmin        Boolean

  @@id([userId, organizationId])
  @@index(userId)
  @@index(organizationId)
}

model Relationship {
  parentUserId String
  parentUser   User     @relation(name: "Parent", fields: [parentUserId], references: [id], onDelete: Cascade)
  childUserId  String
  childUser    User     @relation(name: "Child", fields: [childUserId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  relation     String   @default("")

  @@id([parentUserId, childUserId])
  @@index(parentUserId)
  @@index(childUserId)
}
